<section>
    <div class="container">
        <div class="row mt-2">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>1.</td>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>${{this.Price}}</td>
                    <td>{{this.Description}}</td>
                    <td>
                        <img style="width: 50px; height: 50px" src="/product-images/{{this._id}}.jpg" alt="">

                    </td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure delete {{this.Name}}')">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

    </div>
</section>